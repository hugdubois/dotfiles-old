#!/bin/sh

# config git
git config --global user.name "Hugues Dubois"
git config --global user.email "hugdubois@gmail.com"
sudo git config --global user.name "Hugues Dubois"
sudo git config --global user.email "hugdubois@gmail.com"

brew update
brew tap caskroom/cask

############## CORE ##############
brew cask install xquartz

brew install \
  coreutils automake autoconf openssl \
  unzip fop curl libyaml readline libxslt libtool unixodbc \
  p7zip unzip curl \
  tmux reattach-to-user-namespace fish \
  the_silver_searcher mc lsd \
  neovim ctags jq \
  weechat youtube-dl \
  htop tree feh \
  wxmac \
  nginx

brew install tox
brew cask install wkhtmltopdf

brew cask install java
brew cask install visual-studio-code

brew cask install firefox

############## ENTERTAINMENT/GAMING ##############
# mpd / ncmpcpp
brew install mpd ncmpcpp

# retro gamming/games
brew cask install retroarch

############# THEME #########################
# fonts
brew tap caskroom/fonts
brew cask install font-hack-nerd-font


############## DOCKER\VIRTUAL MACHINE ##############
############## UNACTIVATE USE DOCKER FOR MAC ###########
# brew cask install virtualbox
# brew cask install docker
# brew install docker-compose docker-compose-completion
# sudo groupadd docker
# sudo usermod -aG docker hug

############## DATABASES ##############
# sqlite
brew install sqlite

# mysql/mariadb
brew install mariadb
brew services stop mariadb
brew services start mariadb
sudo mysql_secure_installation
brew services stop mariadb
# sudo mysql -A -u root -p

# postgres/postgis
brew install postgresql postgis
sudo -u postgres initdb --locale en_US.UTF-8 -D '/var/lib/postgres/data'
brew services stop postgresql
brew services start postgresql
sudo createuser -U postgres -s hug
brew services stop postgresql
# to connect to postgresql
# psql -h localhost -U ... -p ... -d ...

# mongoDb
brew install mongodb

# redis
brew install redis

############## LANGUAGES ##############

# dotnet / mono
brew cask install visual-studio
#brew install mono
brew cask install monogame
# dotnet tool install -g fake-cli
# dotnet tool install -g paket

#brew install \
#  php composer python \
#  node \
#  rust go \
#  erlang elixir \
#  haskell ocaml \
#  gnu-smalltalk


####################
# install dotfiles #
####################
if [ ! -d "$HOME/src/github.com/hugdubois/dotfiles" ]; then
  mkdir -p $HOME/src/github.com/hugdubois/
  git clone https://raw.githubusercontent.com/hugdubois/dotfiles $HOME/src/github.com/hugdubois/dotfiles
fi;
DOTFILES_PATH=$HOME/src/github.com/hugdubois/dotfiles
cd $DOTFILES_PATH
$DOTFILES_PATH/bin/installers/core.sh
$DOTFILES_PATH/bin/installers/bash.sh
$DOTFILES_PATH/bin/installers/tmux.sh
$DOTFILES_PATH/bin/installers/ctags.sh
$DOTFILES_PATH/bin/installers/fish.sh
$DOTFILES_PATH/bin/installers/mc.sh
$DOTFILES_PATH/bin/installers/weechat.sh
$DOTFILES_PATH/bin/installers/mpd.sh
$DOTFILES_PATH/bin/installers/zsh.sh
$DOTFILES_PATH/bin/installers/asdf.sh
$DOTFILES_PATH/bin/installers/go.sh
$DOTFILES_PATH/bin/installers/nodejs.sh
$DOTFILES_PATH/bin/installers/nvim.sh
#$DOTFILES_PATH/bin/installers/rustup.sh
