brew install nodejs

####################
# install dotfiles #
####################
if [ ! -d "$HOME/src/github.com/hugdubois/dotfiles" ]; then
	mkdir -p $HOME/src/github.com/hugdubois/
	git clone https://raw.githubusercontent.com/hugdubois/dotfiles $HOME/src/github.com/hugdubois/dotfiles
fi;
DOTFILES_PATH=$HOME/src/github.com/hugdubois/dotfiles
cd $DOTFILES_PATH
$DOTFILES_PATH/bin/installers/core.sh
$DOTFILES_PATH/bin/installers/bash.sh
$DOTFILES_PATH/bin/installers/tmux.sh
$DOTFILES_PATH/bin/installers/ctags.sh
$DOTFILES_PATH/bin/installers/fish.sh
