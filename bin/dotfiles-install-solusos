#!/bin/sh

SCRIPT=$(readlink -f "$0")
SCRIPT_PATH=$(dirname "$SCRIPT")
DOTFILES_PATH=$SCRIPT_PATH/..

##############################
# install eopkg dependencies #
##############################
sudo eopkg install -c system.devel
sudo eopkg install llvm-clang zip unzip
sudo eopkg install fish zsh xclip git git-flow
sudo eopkg install neovim python-neovim ruby-neovim
sudo eopkg install sqlite3 sqlite3-devel
sudo eopkg install openvpn


sudo eopkg install git
git config --global user.name "Hugues Dubois"
git config --global user.email "hugdubois@gmail.com"

