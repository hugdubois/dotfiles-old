#!/bin/sh

SCRIPT=$(readlink -f "$0")
SCRIPT_PATH=$(dirname "$SCRIPT")
DOTFILES_PATH=$SCRIPT_PATH/..

##############################
# install eopkg dependencies #
##############################
sudo eopkg install -c system.devel
sudo eopkg install llvm-clang zip unzip
sudo eopkg install fish xclip git git-flow ctags
sudo eopkg install neovim python-neovim ruby-neovim
sudo eopkg install ranger perl-image-exiftool silver-searcher
sudo eopkg install sqlite3 sqlite3-devel
sudo eopkg install openvpn bridge-utils

# install git
sudo eopkg install git
git config --global user.name "Hugues Dubois"
git config --global user.email "hugdubois@gmail.com"

# docker
sudo eopkg install docker
sudo systemctl enable docker
sudo systemctl start docker
sudo usermod -aG docker $(whoami)

# virtual machines
sudo eopkg install gnome-boxes
#sudo eopkg install virtualbox

# kitematic
sudo eopkg install kitematic

# mariadb
sudo eopkg install mariadb mariadb-server
sudo systemctl enable mariadb
sudo systemctl start mariadb
# sudo mysql -A -u root -p

# divers
sudo eopkg install youtube-dl youtube-dl-gui
sudo eopkg install weechat


####################
# install dotfiles #
####################
$SCRIPT_PATH/dotfiles-install

